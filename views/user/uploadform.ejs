<%- include('../include/header.ejs')%>
<link rel="stylesheet" href="/css/forms.css">
</head>
<body >
    <div class="hk-wrapper hk-vertical-nav">
<%- include('../include/sidenav.ejs') %>
<%- include('../include/topnav.ejs') %>
        <!-- Main Content -->
        <br>
        <div class="hk-pg-wrapper">
           
            <div class="container-fluid px-xxl-65 px-xl-20">
            
                <!-- Row -->
                <div class="row">
                    <div class="col-xl-12">
                        <section class="hk-sec-wrapper">
                            <% if (errorMessage) { %>
                                <div class="user-message user-message--error"><%= errorMessage %></div>
                            <% } %>
                            <h5 class="hk-sec-title">Upload Your Post</h5>
                            <p class="mb-25">More complex forms can be built using the grid classes. Use these for form layouts that require multiple columns, varied widths, and additional alignment options.</p>
                            <div class="row">
                               
                                <div class="col-sm">
                                    <form action="/upload_post?_csrf=<%= csrfTokenss %>" method="POST" enctype="multipart/form-data" >
                                        <div class="row">
                                            <div class="col-md-6 form-group">
                                                <label for="firstName">Post Title</label>
                                                <input class="form-control" name="title" placeholder="" value="" type="text" required>
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <label for="Image">Image</label>
                                                <input type="file"  class="form-control"  id="uploads" name="uploads" required>
                                            </div>
                                        </div>
                                     
                                        <div class="form-group">
                                            <label for="description">Description</label>
                                         
                                            <textarea class="form-control"  name="description" id="" cols="30" rows="8"></textarea>
                                        </div>
                                        <hr>
                                      
                                        <button class="btn btn-primary" type="submit">Upload</button>
                                    </form>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <!-- /Row -->
            </div>
            <!-- /Container -->

<%- include('../include/footer.ejs') %>
